{
    "manifest_version": 3,
    "name": "Chrome Timer",
    "version": "1.0.1",
    "author": "latifasedyeame@gmail.com",
    
    "description": "Timer extension for chrome.",
    "action": {
        "deafult_icon": "icons/Concerned.png",
        "default_title": "Timer",
        "default_popup": "popup.html"
    },
    "permissions":[
        "nativeMessaging"
    ],
    "icons": { 
        "128": "icons/Concerned.png"
    },
    "background": {
        "service_worker":"scripts/background.js"
    },
    "content_scripts":[
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://developer.chrome.com/docs/extensions/*",
                "https://developer.chrome.com/docs/webstore/*"
              ]
        }
    ]
}